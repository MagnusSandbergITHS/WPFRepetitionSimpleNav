<UserControl x:Class="WPFRepetition.Views.CenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFRepetition.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding ResetCounterCommand}" Content="Reset" FontSize="60" />
            <TextBlock Width="50" Text="{Binding Counter, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" >
            <Button FontSize="60"  Command="{Binding NavigateLeftCommand}" Content="Go left" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button FontSize="60" Command="{Binding NavigateRightCommand}" Content="Go right" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" />
    </DockPanel>
</UserControl>
