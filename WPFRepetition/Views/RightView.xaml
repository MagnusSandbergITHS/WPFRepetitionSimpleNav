<UserControl
    x:Class="WPFRepetition.Views.RightView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFRepetition.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button
                Command="{Binding CountUpCommand}"
                Content="Count Up"
                FontSize="60" />
            <TextBlock Width="50" Text="{Binding Counter, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" >
            <Button FontSize="60"  Command="{Binding NavigateCenterCommand}" Content="Go left" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <Button FontSize="60" Command="{Binding NavigateLeftCommand}" Content="Go right" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" />
    </DockPanel>
</UserControl>
